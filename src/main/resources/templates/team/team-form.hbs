{{#partial "content"}}

{{#if editTeam}}
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-11">
                <h3 class="panel-title">Edit Team</h3>
            </div>
            <div class="col-md-1">
                <p class="control-links" data-placement="top" data-toggle="tooltip" title="Go Back"><a href="/" class="btn btn-default btn-xs" data-title="Go Back"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form action="/team/{{editTeam.id}}/update" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="nameUpdate" name="nameUpdate" class="form-control input-sm" type="text" value="{{editTeam.name}}">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Description</label>
                        <input id="descriptionUpdate" name="descriptionUpdate" class="form-control input-sm" type="text" value="{{editTeam.description}}">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="submit" class="form-control btn btn-info center-block" value="Update">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{else}}
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-11">
                <h3 class="panel-title">Team Register</h3>
            </div>
            <div class="col-md-1">
                <p class="control-links" data-placement="top" data-toggle="tooltip" title="Go Back"><a href="/" class="btn btn-default btn-xs" data-title="Go Back"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form action="/team/new" method="post">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="name" name="name" class="form-control" type="text">
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Description</label>
                        <input id="description" name="description" class="form-control" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="submit" class="form-control btn btn-info center-block" value="Add">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{/if}}

{{/partial}}

