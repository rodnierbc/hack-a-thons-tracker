{{#partial "content"}}

{{#if editMember}}
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-11">
                <h3 class="panel-title">Edit Member</h3>
            </div>
            <div class="col-md-1">
                <p class="control-links" data-placement="top" data-toggle="tooltip" title="Go Back"><a href="/team/view/{{team.id}}" class="btn btn-default btn-xs" data-title="Go Back"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form action="/team/{{team.id}}/member/{{editMember.id}}/update" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="nameUpdate" name="nameUpdate" class="form-control input-sm" type="text" value="{{editMember.name}}">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input id="emailUpdate" name="emailUpdate" class="form-control input-sm" type="text" value="{{editMember.email}}">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Education</label>
                        <input id="educationUpdate" name="educationUpdate" class="form-control input-sm" type="text" value="{{editMember.education}}">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="submit" class="form-control btn btn-info center-block" value="Update">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{else}}
<div class="panel panel-info">
    <div class="panel-heading">
        <div class="row">
            <div class="col-md-11">
                <h3 class="panel-title">Member Register</h3>
            </div>
            <div class="col-md-1">
                <p class="control-links" data-placement="top" data-toggle="tooltip" title="Go Back"><a href="/team/view/{{idTeam}}" class="btn btn-default btn-xs" data-title="Go Back"><span class="glyphicon glyphicon-arrow-left"></span></a></p>
            </div>
        </div>
    </div>
    <div class="panel-body">
        <form action="/member/{{idTeam}}/new" method="post">
            <div class="row">
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Name</label>
                        <input id="name" name="name" class="form-control input-sm" type="text">
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Email</label>
                        <input id="email" name="email" class="form-control input-sm" type="text" >
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="form-group">
                        <label>Education</label>
                        <input id="education" name="education" class="form-control input-sm" type="text">
                    </div>
                </div>
            </div>
            <div class="form-group">
                <div class="row">
                    <div class="col-md-3">
                        <input type="submit" class="form-control btn btn-info center-block" value="Add">
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>
{{/if}}

{{/partial}}

{{> layout.hbs}}